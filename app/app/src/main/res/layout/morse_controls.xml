<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/morseControls"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/border_color"
            app:strokeWidth="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Morse Code Configuration"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

            <EditText
                    android:id="@+id/morseInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter message to encode as Morse code..."
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:background="@color/card_background_dark"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary"
                    android:layout_marginBottom="16dp"/>

            <TextView
                    android:id="@+id/morseOutput"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="· · · – – – · · ·"
                    android:textSize="20sp"
                    android:textColor="@color/accent_blue"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:background="@color/card_background_dark"
                    android:padding="16dp"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="20dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/playMorse"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Transmit Message"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/button_success"
                        android:layout_marginEnd="8dp"/>

                <Button
                        android:id="@+id/stopMorse"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Stop Transmission"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/button_danger"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
