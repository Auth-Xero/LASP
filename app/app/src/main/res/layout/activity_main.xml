<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_primary"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:layout_marginBottom="16dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LASP - LoRa Audio Streaming Platform"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Up to 8kHz Audio!"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp">

            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:columnCount="2"
                    android:rowCount="2">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONNECTION STATUS"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"/>

                    <TextView
                            android:id="@+id/connectionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disconnected"
                            android:textSize="16sp"
                            android:textColor="@color/status_inactive"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE SOURCE"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"/>

                    <TextView
                            android:id="@+id/sourceStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="16sp"
                            android:textColor="@color/status_inactive"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PACKETS TRANSMITTED"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"/>

                    <TextView
                            android:id="@+id/packetCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRANSMISSION RATE"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"/>

                    <TextView
                            android:id="@+id/streamRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 pkt/s"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

            <Button
                    android:id="@+id/connectBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Connect Device"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/button_primary"
                    android:layout_marginEnd="8dp"/>

            <Button
                    android:id="@+id/disconnectBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Disconnect"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/button_danger"
                    android:enabled="false"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AUDIO INPUT SOURCES"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp"/>

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                    android:id="@+id/micCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Microphone Input"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capture and stream live audio"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/fileCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audio File"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload and transmit audio files"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/toneCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tone Generator"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Generate precise frequency tones"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/morseCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morse Code"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Encode text as Morse signals"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <include layout="@layout/mic_controls"/>
        <include layout="@layout/file_controls"/>
        <include layout="@layout/tone_controls"/>
        <include layout="@layout/morse_controls"/>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Output Level"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>

                <SeekBar
                        android:id="@+id/volumeSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                <TextView
                        android:id="@+id/volumeValue"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="14sp"
                        android:textColor="@color/accent_blue"
                        android:textStyle="bold"
                        android:gravity="end"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRANSMISSION STATISTICS"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp">

            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:columnCount="2"
                    android:rowCount="2">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                    <TextView
                            android:id="@+id/statPackets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="@color/accent_blue"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL PACKETS"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                    <TextView
                            android:id="@+id/statRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="32sp"
                            android:textColor="@color/accent_blue"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PACKETS/SECOND"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                    <TextView
                            android:id="@+id/statSamples"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="@color/accent_blue"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAMPLES SENT"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                    <TextView
                            android:id="@+id/statUptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textSize="32sp"
                            android:textColor="@color/accent_blue"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STREAM DURATION"
                            android:textSize="11sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM ACTIVITY LOG"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardBackgroundColor="@color/card_background_dark"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/logContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace"
                        android:lineSpacingMultiplier="1.4"/>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>